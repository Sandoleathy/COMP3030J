<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homestay.mapper.HsGuestMapper">
    
    <resultMap type="HsGuest" id="HsGuestResult">
        <result property="id"    column="id"    />
        <result property="guestId"    column="guest_id"    />
        <result property="reservationId"    column="reservation_id"    />
    </resultMap>

    <sql id="selectHsGuestVo">
        select id, guest_id, reservation_id from hs_guest
    </sql>

    <select id="selectHsGuestList" parameterType="HsGuest" resultMap="HsGuestResult">
        <include refid="selectHsGuestVo"/>
        <where>  
            <if test="guestId != null "> and guest_id = #{guestId}</if>
            <if test="reservationId != null "> and reservation_id = #{reservationId}</if>
        </where>
        ORDER BY reservation_id DESC
    </select>
    
    <select id="selectHsGuestById" parameterType="Long" resultMap="HsGuestResult">
        <include refid="selectHsGuestVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertHsGuest" parameterType="HsGuest" useGeneratedKeys="true" keyProperty="id">
        insert into hs_guest
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="guestId != null">guest_id,</if>
            <if test="reservationId != null">reservation_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="guestId != null">#{guestId},</if>
            <if test="reservationId != null">#{reservationId},</if>
         </trim>
    </insert>

    <update id="updateHsGuest" parameterType="HsGuest">
        update hs_guest
        <trim prefix="SET" suffixOverrides=",">
            <if test="guestId != null">guest_id = #{guestId},</if>
            <if test="reservationId != null">reservation_id = #{reservationId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteHsGuestById" parameterType="Long">
        delete from hs_guest where id = #{id}
    </delete>

    <delete id="deleteHsGuestByIds" parameterType="String">
        delete from hs_guest where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectHsGuestsByGuestId" parameterType="Long" resultMap="HsGuestResult">
        <include refid="selectHsGuestVo"/>
        where guest_id = #{guestId}
    </select>

    <select id="selectHsGuestsByReservationId" parameterType="Long" resultMap="HsGuestResult">
        <include refid="selectHsGuestVo"/>
        where reservation_id = #{reservationId}
    </select>

    <!-- Result Map to handle object mapping -->
    <resultMap id="SysUserResultMap" type="com.ruoyi.system.api.domain.SysUser">
        <id column="user_id" property="userId" />
        <result column="dept_id" property="deptId" />
        <result column="user_name" property="userName" />
        <result column="nick_name" property="nickName" />
        <result column="email" property="email" />
        <result column="phonenumber" property="phonenumber" />
        <result column="sex" property="sex" />
        <result column="avatar" property="avatar" />
        <result column="password" property="password" />
        <result column="status" property="status" />
        <result column="del_flag" property="delFlag" />
        <result column="login_ip" property="loginIp" />
        <result column="login_date" property="loginDate" />
    </resultMap>

    <!-- SQL query to select a SysUser by userId -->
    <select id="selectSysUserById" resultMap="SysUserResultMap">
        SELECT user_id, user_name, email, phonenumber
        FROM sys_user
        WHERE user_id = #{userId}
    </select>

    <select id="selectSysUserByUser" resultMap="SysUserResultMap">
        SELECT user_id, user_name, email, phonenumber
        FROM sys_user
        <where>
            <if test="userName != null and userName != ''">
                AND user_name = #{userName}
            </if>
            <if test="email != null and email != ''">
                AND email = #{email}
            </if>
            <if test="phonenumber != null and phonenumber != ''">
                AND phonenumber = #{phonenumber}
            </if>
        </where>
    </select>

</mapper>